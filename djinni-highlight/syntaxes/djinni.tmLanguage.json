{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"scopeName": "source.djinni",
	"patterns": [
		{ "include": "#keywords" },
		{ "include": "#strings" },
		{ "include": "#record" },
		{ "include": "#interface" }
	],
	"repository": {
		"keywords": {
			"patterns": [
				{
					"name": "keyword.djinni",
					"match": "\\b(enum|string|bool|i8|i16|i32|i64|f32|f64|binary|set|map|list|const|deriving|static|optional)\\b"
				},
				{
					"name": "keyword.control.djinni",
					"match": "(:|\\+c|\\+j|\\+o|@import)"
				},
				{
					"name": "markup.bold.djinni",
					"match": "\\b(record|interface)\\b"
				},
				{
					"name": "comment.line.djinni",
					"match": "#.*$\n?"
				}
			]
		},
		"strings": {
			"name": "string.quoted.double.djinni",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.djinni",
					"match": "\\\\."
				}
			]
		},
		"record": {
			"begin": "([A-Za-z][A-Za-z0-9_.]*)(\\s*)=(\\s*)(record|enum)(\\s*)(\\{)?",
			"beginCaptures": {
				"1": {"name": "entity.name.class.message.djinni"},
				"4": {"name": "markup.bold.djinni"}
			},
			"end": "\\}",
			"patterns": [
				{"include": "$self"},
				{"include": "#strings"},
				{"include": "#keywords"}
			]
		},
		"interface": {
			"begin": "([A-Za-z][A-Za-z0-9_.]*)(\\s*)=(\\s*)(interface)",
			"beginCaptures": {
				"1": {"name": "entity.name.class.djinni"},
				"4": {"name": "markup.bold.djinni"}
			},
			"end": "\\}",
			"patterns": [
				{"include": "$self"},
				{"include": "#strings"},
				{"include": "#function"},
				{"include": "#static-function"},
				{"include": "#keywords"}
			]
		},
		"function": {
			"begin": "([A-Za-z][A-Za-z0-9_.]*)(\\()",
			"beginCaptures": {
				"1": {"name": "entity.name.function.djinni"}
			},
			"end": ";",
			"patterns": [
				{"include": "$self"},
				{"include": "#strings"},
				{"include": "#keywords"},
				{"include": "#post-type"},
				{"include": "#return-type"}
			]
		},
		"static-function": {
			"begin": "(static)(\\s+)([A-Za-z][A-Za-z0-9_.]*)(\\()",
			"beginCaptures": {
				"3": {"name": "entity.name.function.djinni"}
			},
			"end": ";",
			"patterns": [
				{"include": "$self"},
				{"include": "#strings"},
				{"include": "#keywords"},
				{"include": "#post-type"},
				{"include": "#return-type"}
			]
		},
		"post-type": {
			"begin": "([A-Za-z][A-Za-z0-9_.]*)(\\s*):(\\s*)([A-Za-z][A-Za-z0-9_.]*)",
			"beginCaptures": {
				"4": {"name": "keyword.djinni"}
			},
			"end": "\\b",
			"patterns": [
				{"include": "$self"},
				{"include": "#strings"},
				{"include": "#keywords"}
			]
		},
		"return-type": {
			"begin": "(\\))(\\s*):(\\s*)([A-Za-z][A-Za-z0-9_.]*)",
			"beginCaptures": {
				"4": {"name": "keyword.djinni"}
			},
			"end": ";",
			"patterns": [
				{"include": "$self"},
				{"include": "#strings"},
				{"include": "#keywords"}
			]
		}

	}
}